<header>
  <div class="logo"><%=link_to "Presidential", root_path %></div>
  <div class="fetch-presentation">
    <input id="presentation-url" class="presentation-url" type="text" name="Markdown URL" placeholder="http://location/file.md"/>
    <img id="get-markdown" class="get-markdown" src="img/markdown.png" title="Get Markdown">
  </div>
    <% if @current_user.first_name %>
      <ul class="user"><%= "Hello, " + @current_user.first_name %>
        <li>Presentations</li>
        <li>Log Out</li>
      </ul>
    <% else %>
      <div class="user"><%=link_to "Login", new_user_path %></li><div>
    <% end %>
</header>

<div class="slide-container"></div>

<footer>
  <p>&copy; 2015 Presidential</p>
</footer>
